<h2 class="mb-3">Manage Users</h2>
<table class="table">
  <thead><tr><th>Email</th><th>Username</th><th>Role</th><th>Created</th><th>Aksi</th></tr></thead>
  <tbody>
  <% users.forEach(u=>{ %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.username %></td>
      <td><%= u.role %></td>
      <td><%= new Date(u.createdAt).toLocaleString() %></td>
      <td>
        <% if (u.role!=="suspended") { %>
        <form method="post" action="/admin/users/<%= u.id %>/suspend">
          <button class="btn btn-sm btn-danger">Suspend</button>
        </form>
        <% } %>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
