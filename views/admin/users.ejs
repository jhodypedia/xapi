<h3 class="mb-3"><i class="fa fa-users me-2"></i>Manage Users</h3>
<table class="table">
  <thead><tr><th>#</th><th>Username</th><th>Email</th><th>Role</th><th>Created</th></tr></thead>
  <tbody>
    <% users.forEach((u,i)=>{ %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td><span class="badge <%= u.role==='admin'?'badge-info':'badge-success' %>"><%= u.role %></span></td>
        <td><%= u.createdAt.toLocaleString() %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
